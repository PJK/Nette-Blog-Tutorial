{block content}
<h1>Můj blogísek</h1>

<div id="posts">
	{if count($posts)}
    <div class="post" n:foreach="$posts as $post">
        <h3>{$post['title']}</h3>
        <small>Přidáno {$post['date']|date}</small>
        <p>{$post['body']|truncate:300}</p>
        <a href="{plink single $post['id']}">Více…</a>
    </div>
	{else}
	Zatím nebyl napsán žádný článek.
	{/if}
</div>